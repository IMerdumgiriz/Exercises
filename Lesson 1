// Switch ve if-else ile Bir Öğrencinin Yıl Sonu Belgesini Gösteren Kod
// A student's year-end grade point average with if else and Switch
var gradePoint = 100
func karne(){
            let gradePoint = Int.random(in: 0...100)
            if gradePoint >= 85{
                print("TAKDİR BELGESİ ALMAYA HAK KAZANDIN")
            }else if gradePoint <= 84{
                print("TEŞEKKÜR BELGESİ ALMAYA HAK KAZANDIN")
            }else{
                print("HİÇBİRŞEY KAZANAMADINIZ")
            }
        }

// with Switch 
func Notes(){
            let gradePoint = Int.random(in: 0...100)
            switch gradePoint{
            case 85...100:
                print("TAKDİR BELGESİ ALMAYA HAK KAZANDIN")
            case 70...84:
                print("TEŞEKKÜR BELGESİ ALMAYA HAK KAZANDIN")
            case 50...69:
                print("TEBRİKLER SINIFI GEÇTİNİZ")
            default:
                print("MAALESEF SINIFTA KALDINIZ")
            }
        }
